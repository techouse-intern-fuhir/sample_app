<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <%# count→数を返す, length→全て読み込んで配列を作りその配列の長さを返す %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%# usersのview内のため自動的に持ってきてくれないから@micropostsを明示する %>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
